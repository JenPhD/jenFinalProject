<div id="header" class="col-md-6">
<form id="newUserForm" class="create-update-form" action="/users/create" method="POST">
  <div class="form-group">
    <label for="un">Username:</label>
    <input type="text" id="un" name="name" class="input">
  </div>

  <div class="form-group">
    <label for="em">Email:</label>
    <input type="text" id="em" name="email" class="input">
  </div>

  <div class="form-group">
    <label for="pass">Password:</label>
    <input type="password" id="pass" name="password" class="input">
  </div>

  <button type="submit" class="waves-effect waves-light btn">Sign Up!</button>
</form>
</div>

