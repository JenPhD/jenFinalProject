 <div id="itinCreate" class="create-update-form" action="trips/itinerary/create" method="POST">
        <div class="form-group">
            <div class="row">
                <div class="col-md-4">
                    <label for="usersOrigin">Traveling from</label> <i class="fa fa-plane" aria-hidden="true"></i><br>
                    <input type="text" name="usersOrigin" class="form-control awesomplete" id="usersOrigin" placeholder="City, State (ex: Orlando,FL)*">
                </div>
                <div class="col-md-4">
                    <label for="usersDestination">Traveling to</label> <i class="fa fa-plane" aria-hidden="true"></i><br>
                    <input type="text" name="usersDestination" class="form-control awesomplete" id="usersDestination" placeholder="City, State (ex: Orlando,FL)*">
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-4"
                    <label for="departDate">Departing Date and Time</label>
                    <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
                    <input type="datetime-local" name="departDate" class="form-control" id="departDate">
                </div>
                <div class="col-md-4">
                    <label for="returnDate">Returning Date and Time</label>
                    <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
                    <input type="datetime-local" name="returnDate" class="form-control" id="returnDate">
                </div>
            </div>
        </div>

         <div class="form-group">
             <div class="row">
                 <div class="col-md-3">
                     <label for="departFly">Depart Airline</label> <i class="fa fa-plane" aria-hidden="true"></i>
                     <input type="text" name="departFly" class="form-control" id="departFly">
                </div>
                 <div class="col-md-3">
                     <label for="flyNumber1">Flight Number</label>
                     <input type="text" name="flyNumber1" class="form-control" id="flyNumber1">
                </div>
                 <div class="col-md-3">
                     <label for="returnFly">Returning Airline </label> <i class="fa fa-plane" aria-hidden="true"></i>
                     <input type="text" name="returnFly" class="form-control" id="returnFly">
                </div>
                 <div class="col-md-3">
                     <label for="flyNumber2">Flight Number</label>
                     <input type="text" name="flyNumber2" class="form-control" id="flyNumber2">
                </div>
            </div>
        </div>

 <div class="form-group">
     <div class="row">
         <div class="col-md-4">
             <label for="hotel">Hotel/Rental</label> <i class="fa fa-hotel" aria-hidden="true"></i>
             <input type="text" name="hotel" class="form-control" id="hotel">
         </div>
         <div class="col-md-4">
             <label for="hotAddress">Hotel/Rental Address</label> <i class="fa fa-building" aria-hidden="true"></i>
             <input type="text" name="hotAddress" class="form-control" id="hotAddress">
         </div>
         <div class="col-md-4">
             <label for="hotPhone">Hotel/Rental Phone </label> <i class="fa fa-phone" aria-hidden="true"></i>
             <input type="text" name="hotPhone" class="form-control" id="hotPhone">
         </div>
     </div>
 </div>
 <div class="form-group">
     <div class="row">
         <div class="col-md-3">
             <label for="volOrg">Volunteer Organization</label> <i class="fa fa-heart" aria-hidden="true"></i>
             <input type="text" name="volOrg" class="form-control" id="volOrg">
         </div>
         <div class="col-md-3">
             <label for="volDate">Event Date</label> <i class="fa fa-calendar" aria-hidden="true"></i>
             <input type="datetime-local" name="volDate" class="form-control" id="volDate">
         </div>
         <div class="col-md-3">
             <label for="volAddress">Organization Address</label> <i class="fa fa-institution" aria-hidden="true"></i>
             <input type="text" name="volAddress" class="form-control" id="volAddress">
         </div>
         <div class="col-md-3">
             <label for="volPhone">Organization Phone </label> <i class="fa fa-phone" aria-hidden="true"></i>
             <input type="text" name="volPhone" class="form-control" id="volPhone">
         </div>

     </div>
 </div>



        <button type="submit" class="btn btn-default" id="submit3"><span class='fa fa-floppy-o' aria-hidden="true"> </span>Save</button>
        <p>*destinations are limited to the United States</p>


    <div class="row">
        <div id="saved" class="col-md-6">
            <h2>Saved Trip</h2>
            <ul id="itineraryList">
                {{#each trips}}
                    {{#unless this.itinerary}}
                        <li>
                            Depart: {{this.depcity}} <br>
                            Destination: {{this.destcity}} <br>
                            Depart date: {{this.departdate}} <br>
                            Return date: {{this.returndate}} <br>
                            Number of volunteers: {{this.numvol}} <br>

                            <form action="trips/update/{{this.id}}?_method=PUT" method="POST">
                                <input type="hidden" name="itinerary" value="true">
                                <button type="submit" class="submit">Create your itinerary</button>
                            </form>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div id="itin" class="col-md-6">
            <h2>Your itinerary</h2>
            <ul>
                {{#each trips}}
                    {{#if this.itinerary}}
                        <li>
                            Depart: {{this.depcity}} <br>
                            Destination: {{this.destcity}} <br>
                            Depart date: {{this.departdate}} <br>
                            Return date: {{this.returndate}} <br>
                            Number of volunteers: {{this.numvol}} <br>
                            {{> trips/delete-trip}}
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

